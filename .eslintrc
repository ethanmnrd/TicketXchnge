{
	"env": {
		"browser": true,
		"node": true,
		"jest": true
	},
	"extends": [
		"airbnb",
		"plugin:flowtype/recommended"
	],
	"plugins": [
		"flowtype",
		"compat"
	],
	"rules": {
		"no-unexpected-multiline": 2,
		"compat/compat": 2,
		"react/sort-comp": [
      "error",
      {
        "order": [
          "type-annotations",
          "defaultProps",
          "state",
          "constructor",
          "everything-else",
          "static-methods",
          "lifecycle",
          "render"
        ]
      }
    ],
		"comma-dangle": ["error", "never"],
		"no-tabs": 0,
    "react/jsx-wrap-multilines": ["error", {"declaration": false, "assignment": false}],
    "no-unneeded-ternary": 0,
    "react/destructuring-assignment": 0,
    "prefer-destructuring":0
	},
	"settings": {
		"polyfills": ["fetch"]
	}
}